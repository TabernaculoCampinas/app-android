<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TabernaculoCampinas" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/philippin_bronze</item>
        <item name="colorPrimaryVariant">@color/philippin_bronze</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tiger_eye</item>
        <item name="colorSecondaryVariant">@color/tiger_eye</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="EditTextDefalt" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/background_platinum</item>
        <item name="android:textColorHint">@color/morning_blue</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextViewTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/philippin_bronze</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>